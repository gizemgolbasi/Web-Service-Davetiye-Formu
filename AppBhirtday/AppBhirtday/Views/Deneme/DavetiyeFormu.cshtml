@model AppBhirtday.Models.Davetiye
@{
    ViewBag.Title = "DavetiyeFormu";
}

<h2>DavetiyeFormu</h2>
<div class="panel panel-succes">
    <div class="panel-heading"><h4>Sende davetlisin!</h4></div>
    <div class="panel-body">
        @using(Html.BeginForm())
            {
                <div class="form-group">
                    <label>Ad:</label>
                    @Html.TextBoxFor(m=>m.Ad, new {@class="form-control"})
                </div>

                <div class="form-group">
                    <label>Eposta:</label>
                    @Html.TextBoxFor(m=>m.Eposta, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Katılacak mısın?</label>
                    @Html.DropDownListFor(c => c.KatilmeDurumu, new[]{

                   new SelectListItem() {Text="Evet Geliyorum",
                       Value=bool.TrueString},
                   new SelectListItem() {Text="Hayır Katılmıyorum",
                       Value=bool.FalseString}
               }, "Geliyor musun", new { @class = "form-control" });

                </div>
                <div class="text-center">
                    <input class="btn btn-success" type="submit"  value="Gönder"/>
                </div>
            }
    </div>
</div>
